<h1>投稿一覧</h1>
<table>
    <tr>
        <th>内容</th>
        <th>時間</th>
    </tr>
    <% @boards.each do |board| %>
    <tr>
    <td><%= board.content %></td>
    <td><%= board.created_at.strftime("%Y-%m-%d %H:%M") %></td>
    <td><%= link_to '投稿を編集する',edit_board_path(board.id)  %></td>
    <td><%= link_to '投稿を削除する',board_path(board.id) ,method: :delete %></td>
    </tr>
    <% end%>
</table>
<br>
    <p><%= link_to '新しく投稿する' , new_board_path %></p>
