<%= form_with(model: @board, local:true, url: new_or_edit ) do |form| %>
<% if @board.errors.any? %>
    <div>
    <% @board.errors.full_messages.each do |msg| %>
    <%= msg %>
    <% end %>
    </div>
    <% end %>
    <div>
    <%= form.label :content %>
    <%= form.text_field :content %>  
    </div>
<%= form.submit '投稿する' %>
<% end %>